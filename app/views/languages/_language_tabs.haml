%ul.nav.nav-tabs.localized-texts
  %li.title
    %a= @language
  %li{class: @active_tab == :entry ? 'active':''}= link_to "To enter", entry_language_texts_path(@language)
  %li{class: @active_tab == :review ? 'active':''}= link_to "For review", review_language_texts_path(@language)
  %li{class: @active_tab == :all ? 'active':''}= link_to "All", language_texts_path(@language)
  %li{class: @active_tab == :view ? 'active':''}
    = link_to language_views_path(@language) do
      = icon('list-alt')
      Views
